@model ContactViewModel

@{
	ViewBag.Title = "Contact";
}

@section Scripts {
	<script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div class="m-3">
	<form method="post" class="col-md-6" id="contact-form" >
		<div asp-validation-summary="ModelOnly">
			<p>Please fix the following errors:</p>
		</div>
		<div class="form-group">
			<label asp-for="Name">Your Name:</label>
			<input type="text" asp-for="Name" class="form-control"/>
			<span asp-validation-for="Name"></span>
		</div>
		<div class="form-group">
			<label asp-for="Email">Email:</label>
			<input asp-for="Email" type="email" class="form-control" />
			<span asp-validation-for="Email"></span>
		</div>
		<div class="form-group">
			<label asp-for="Subject">Subject:</label>
			<input asp-for="Subject" type="text" class="form-control" />
			<span asp-validation-for="Subject"></span>
		</div>
		<div class="form-group">
			<label asp-for="Message">Message:</label>
			<textarea class="form-control" asp-for="Message" rows="4"></textarea>
			<span asp-validation-for="Message"></span>
		</div>
		<button type="submit" class="btn btn-primary">Send</button>
		<div>@ViewBag.UserMessage</div>
	</form>
</div>