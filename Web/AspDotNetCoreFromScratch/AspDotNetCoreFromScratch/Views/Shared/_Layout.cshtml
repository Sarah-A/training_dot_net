<!DOCTYPE html>
<html>
<head>
	<title>Dutch Treat - @ViewBag.Title</title>
	<environment names="Development">
		<link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />		
	</environment>
	<environment names="Staging,Production">
		<link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	</environment>
		<link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
	<div id="main-page" class="container-fluid">
		<nav class="navbar navbar-light navbar-expand-md navbar-light px-0">
			<div>
				<h1 class="nabar-brand ml-0">Dutch Treat</h1>
			</div>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav mr-auto">
					<li class="navbar-item">
						<a class="nav-link" asp-controller="App" asp-action="Index">Home</a>
					</li>
					<li class="navbar-item">
						<a class="nav-link" asp-controller="App" asp-action="Shop">Shop</a>
					</li>
				</ul>
				<ul class="navbar-nav">
					<li class="navbar-item">
						@if (!User.Identity.IsAuthenticated)
						{
							<a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
						}
						else
						{
							<a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
						}
					</li>
					<li class="navbar-item">
						<a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a>
					</li>
					<li class="navbar-item">
						<a class="nav-link" asp-controller="App" asp-action="About">About</a>
					</li>
				</ul>
			</div>
		</nav>
		<section>
			@RenderBody()
		</section>
		<footer>Copyright 2019 Dutch Treat LLC</footer>
		<environment names="Development">
			<script src="~/node_modules/jquery/dist/jquery.js"></script>
			<script src="~/node_modules/bootstrap/dist/js/bootstrap.js"></script>
			<script src="~/js/index.js"></script>
		</environment>
		<environment names="Staging,Production">
			<script src="//ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
					asp-fallback-src="~/node_modules/jquery/dist/jquery.min.js"
					asp-fallback-test="window.jQuery"></script>
			<script src="//ajax.aspnetcdn.com/ajax/bootstrap/4.3.1/bootstrap.min.js"
					asp-fallback-src="~/node_modules/bootstrap/dist/js/bootstrap.min.js"
					asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"></script>
			<script src="~/dist/dutchtreat.min.js" asp-append-version="true"></script>
		</environment>

		@RenderSection("scripts", required: false)
	</div>
</body>
</html>