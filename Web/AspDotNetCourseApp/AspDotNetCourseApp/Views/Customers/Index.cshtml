@model List<AspDotNetCourseApp.Models.Customer>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count == 0)
{
	<text>No Customers in the system!</text>
}
else
{
	<h2>Customers:</h2>
	<ul>
		@foreach (var customer in Model)
		{
			<li>@customer.Name</li>
		}
	</ul>
}

