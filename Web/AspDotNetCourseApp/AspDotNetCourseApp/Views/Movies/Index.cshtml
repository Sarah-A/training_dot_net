@model List<AspDotNetCourseApp.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count == 0)
{
	<text>No Movies in the system!</text>
}
else
{
	<h2>Movies:</h2>
	<ul>
		@foreach (var customer in Model)
		{
			<li>@customer.Name</li>
		}
	</ul>
}

