@model List<AspDotNetCourseApp.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count == 0)
{
	<text>No Movies in the system!</text>
}
else
{
	<h2>Movies:</h2>
	<div class="list-group">
		@foreach(var movie in Model)
		{
			@Html.ActionLink(movie.Name,
							"Details",
							"Movies",
							new { id = movie.Id },
							new { @class="list-group-item list-group-item-action"}
			)
			
		}
	</div>
}

