@model AspDotNetCourseApp.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
	<li>Genre: @Model.Genre.Name</li>
	@{
		if (Model.ReleaseDate != null)
		{
			<li>Release Date: @Model.ReleaseDate.ToLongDateString()</li>
		}
		if (Model.AddedToDb != null)
		{
			<li>Date Added: @Model.AddedToDb.Value.ToLongDateString()</li>
		}
	}
	<li>Number In Stock: @Model.NumberInStock</li>
</ul>

